
.container
    .background_slide_1    
    .background_slide_2
        // Shadow Created in the bottom of the container via lineae-gradient  
    .border_shadow_bottom
      // Container for titles
    .container_big_header
      .big_header_content
        h1 {{container[0].header}}
        
      .small_header_content
        h6(ng-bind-html='container[1].small_header') {{container[1].small_header}}
        
      .data_small_content
        .date {{container[2].date}} 
        .eye_img
        .views {{container[3].views}}
        // Social icons on the left side of the container with position fixed
    .social_icons
      a(href='#').facebook
        .facebook_logo
      a(href='#').twitter
        .twitter_logo
      a(href='#').google_plus
        .google_logo
